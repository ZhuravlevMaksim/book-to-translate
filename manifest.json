{
  "manifest_version": 2,
  "name": "book-to-translate",
  "version": "1.0",
  "description": "Parse epub book content and send it to translator paragraph by paragraph",
  "icons": {
    "48": "icons/icons8-book-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "maks723@yandex.ru",
      "strict_min_version": "56.0"
    }
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://translate.google.com/*"],
      "js": ["index.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/icons8-book-48.png"
  }
}